root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

[*.java]
indent_style = tab
indent_size = 4

[*.{py,python}]
indent_size = 4
indent_style = space

[*.{rs}]
indent_style = space
indent_size = 4

[*.{js,jsx}]
indent_size = 2
indent_style = space

[Makefile]
indent_style = 4
indent_size = tab

[*.go]
indent_size = tab
indent_style = 2

[*.md]
trim_trailing_whitespace = false

[*.{bash,sh,fish}]
indent_size = 4
indent_style = space

[*.{yaml,yml}]
indent_size = 4
