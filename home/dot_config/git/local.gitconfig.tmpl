# Machine specific git configuration
[user]
    {{- if ne .git_name nil }}
    name = {{ .git_name }}
    {{- end }}
    {{- if ne .git_email nil }}
    email = {{ .git_email }}
    {{- end }}
    {{- if ne .git_signingkey nil }}
    signingkey = {{ .git_signingkey }}
    {{- end }}

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
  gpgsign = true

